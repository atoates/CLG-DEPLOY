{
  "name": "crypto-lifeguard",
  "version": "1.0.0",
  "description": "Crypto Lifeguard - Monorepo for Admin Panel and Backend API",
  "private": true,
  "workspaces": [
    "apps/admin",
    "apps/backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:admin\" \"npm run dev:backend\"",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build": "npm run build --workspace=apps/admin",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:backend": "echo 'No build step for backend'",
    "start:backend": "npm run start --workspace=apps/backend",
    "migrate": "npm run migrate --workspace=apps/backend",
    "install:all": "npm install",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
